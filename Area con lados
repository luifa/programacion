#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"
using namespace std;


int main ()
{
	int lado1,lado2,lado3;
	float area,s;
	cout>> "ingrese lado 1:"
	cin>> lado1;
	cout>> "ingrese lado 2:"
	cin>> lado2;
	cout>> "ingrese lado 3:"
	cin>> lado3;
	s=(lado1+lado2+lado3)/2;
	area=sqrt(s*(s-lado1)*(s-lado2)*(s-lado3));
  cout<< "El area es:" <<area;
	getch();


	return 0;
}

