#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"
using namespace std;


int main ()
{
	int base,altura;
	float area;
	cout<<"ingrese base:";
	cin>> base;
	cout<<"ingrese altura:";
	cin>> altura;
	
	area=(base*altura)/2.0;
	cout<< "El area es: " <<area;
	getch();


	return 0;
}
